<div class="top">
  <div id="central-block">
    <div class="icon"><%= link_to("", root_path) %></div>
    <div class="menu-links"><%= link_to("Features", "#") %></div>
    <div class="menu-links"><%= link_to("Business", "#") %></div>
    <div class="menu-links"><%= link_to("Explore", "#") %></div>
    <div class="menu-links"><%= link_to("Marketplace", "#") %></div>
    <div class="menu-links"><%= link_to("Pricing", "#") %></div>
    <% if logged_out? %>
      <form accept-charset="UTF-8" action="#" class="subnav-search float-left search-form" data-pjax="true" method="get">
        <div style="margin: 0; padding: 0; display: inline;">
          <input name="utf8" type="hidden" value="+">
        </div>
        <input aria-label="Search all issues" class="form-control search-form-inside" data-hotkey="/"
               name="q" placeholder="Search GitClub" type="text" value="">
      </form>
    <% end %>
    <div class="input-or-regist">
      <% if logged_in? %>
      <ul class="account-button">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for @user %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu account-menu">
            <li>Signed in as <%= current_user.name %> </li>
            <li class="divider"></li>
            <li><%= link_to "Your profile", current_user %></li>
            <li><%= link_to "Your stars", '#' %></li>
            <li><%= link_to "Your Gist", '#' %></li>
            <li class="divider"></li>
            <li><%= link_to "Help", '#' %></li>
            <li><%= link_to "Settings", '#' %></li>
            <li><%= link_to "Sign out", logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% else %>
        <div class="menu-links"><%= link_to("Sing In", login_path) %></div>
        <div class="menu-links color-gray">or</div>
        <div class="menu-links"><%= link_to("Sing Up", signup_path) %></div>
      <% end %>
    </div>
  </div>
</div>