<div class="container show-activity">
  <div class="row">
    <div class="col-md-3">
      <div class="user-photo">
      </div>
      <div class="user-name">
        User name
      </div>
      <div class="user-nickname">
        <%= current_user.name %>
      </div>
      <div class="user-description">
        Description
      </div>
      <div class="user-email">
        <%= current_user.email %>
      </div>
      <div>
        <strong>Organizations</strong>
      </div>
    </div>
    <div class="col-md-8">
      <div class="user-info-block">
